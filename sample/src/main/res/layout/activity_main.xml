<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.stepstone.stepper.sample.MainActivity">

        <Button
            android:id="@+id/defaultDots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_dots" />

        <Button
            android:id="@+id/styledDots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/styled_dots" />

        <Button
            android:id="@+id/themedDots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/themed_dots" />

        <Button
            android:id="@+id/defaultProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_progress_bar" />

        <Button
            android:id="@+id/styledProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/styled_progress_bar" />

        <Button
            android:id="@+id/defaultTabs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_tabs" />

        <Button
            android:id="@+id/styledTabs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/styled_tabs" />

        <Button
            android:id="@+id/combination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/combination" />

        <Button
            android:id="@+id/customPageTransformer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/custom_page_transformer" />

        <Button
            android:id="@+id/delayedTransition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delayed_transition" />

        <Button
            android:id="@+id/differentNavigationButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/different_navigation_buttons" />

        <Button
            android:id="@+id/showReturnButtonOnFirstStep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_back_button" />

        <Button
            android:id="@+id/noFragments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_fragments" />

    </LinearLayout>
</ScrollView>